@model demo.Domain.ExampleForm

@{
    ViewBag.Title = "Test walidatorów";
    Layout = "_Layout";
}

<h2>Test walidatorów</h2>

<form asp-action="Submit"
      method="post" class="g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30" enctype="multipart/form-data">
    
    <div>
        <span asp-validation-summary></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control rounded-0 form-control-md" placeholder="Wprowadź imię"/>
        <span asp-validation-for="Name"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Surname"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Description"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Country"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Phone"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Email"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Age"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="Password"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control rounded-0 form-control-md" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    
    <div class="form-group g-mb-25">
        <label asp-for="Files"></label>
        <input asp-for="Files" class="form-control rounded-0 form-control-md" multiple/>
        <span asp-validation-for="Files"></span>
    </div>
    
    
    
    <input type="submit"/>
</form>

